<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2>Entry for: <%= Date.today.strftime("%B %d, %Y") %></h2>
			<hr>
			<div class="well post-well">
				<%= form_for(@post, :html => {role: "form"}) do |f| %>
				
				  <div class="form-group">
				      <%= f.label :summary%>
				      <%= f.text_area :summary, rows: 5, class:'form-control', placeholder: "Today I decided to...", autofocus: true %>
				  </div>
	
				  <div class="form-group">
				      <%= f.label :improvements %>
				      <%= f.text_area :improvements, rows: 5, class:'form-control', placeholder: "Today I should have...", autofocus: true %>
				  </div>
	
				  <div class="form-group">
				      <%= f.label :objectives %>
				      <%= f.text_area :objectives, rows: 5, class:'form-control', placeholder: "Tomorrow I will...", autofocus: true %>
				  </div>

				  <div class="form-group">
				    <%= f.submit class:"btn btn-success btn-md" %>
				  </div>
				  
				<% end %>
			</div>
		</div>
	</div>
</div>